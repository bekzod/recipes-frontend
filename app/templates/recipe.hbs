<div class="recipe-page">
  <div class="top-bar">
    <span class="title">Recipe</span>
    {{#link-to 'search.index' class='button arrow-left'}}
      search
    {{/link-to}}
  </div>

  {{#if images}}
    {{#image-loader class='food-image-container'}}
      <img class='background' {{bind-attr src=images.blured}} alt="">
      <div class="background-overlay"></div>
      <img class='forground' {{bind-attr src=images.original}} alt="">
    {{/image-loader}}
  {{/if}}

  <div class="content">
    <h1>{{model.name}}</h1>

    <div class='main-content'>
      <div class="ingredients">
        <div class='ingredients-title'>Ingredients
        {{#if model.yield}}
          <span class='sub-title'>for {{model.yield}}</span>
        {{/if}}
        </div>
        {{#each ingredient in model.ingredientsDetail}}
          {{#if ingredient.title}}
            <div class='ingredients-sub-title'>{{ingredient.title}}</div>
          {{/if}}
          <ol>
            {{#each item in ingredient.ingredients}}
              <li>{{{item}}}</li>
            {{/each}}
          </ol>
        {{/each}}
      </div>

      <div class="tags-container">
        {{#each ingredient in model.ingredients}}
          {{#link-to 'ingredient' ingredient class='tag tag-existing'}}
            {{ingredient}}
          {{/link-to}}
        {{/each}}
      </div>
    </div>

    <div class='instruction'>
      {{#each paragraph in model.instructions}}
        <p>{{paragraph}}</p>
      {{/each}}
    </div>
  </div>

</div>
